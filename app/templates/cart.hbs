<header class="p-3">
  <h1>Ember Goods</h1>
    <nav>
      <ul class="breadcrumb">
        <li class="breadcrumb-item">
          <LinkTo @route="index">
                 Home
          </LinkTo>
        </li>
        <li class="breadcrumb-item">
          Shopping Cart
        </li>
      </ul>
    </nav>
</header>
<main class="container">
  {{#each this.shoppingCart.itemList as |item|}}
      <div class="cart-item mb-4 d-flex align-items-center">
        <div class="cart-thumbnail">
          <img src={{item.image}} alt="product image">
        </div>
     <div class="mt-3">
          <p>{{item.name}}</p>
        <p>{{currency item.price}}</p>
     </div>
     <div class="flex-column m-3">
         <span role="alert" class="warning bg-danger"></span>
     <label class="sr-only" for="itemCount">The number of this item in your basket</label>
     <input
     class="ml-auto"
     type="number"
     name="itemCount"
     id="itemCount"
     value={{item.count}}
     {{on "input" (fn this.updateItemCount item)}}
     >
     </div>

      </div>
  {{/each}}
  <section class="w-50 text-right ml-auto mb-5">
    <h2>Price Breakdown</h2>
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{currency this.subtotal}}</span>
    </div>
    <div class="row">
      <span class="col">Shipping</span>
      <span class="col">{{currency this.shipping}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{currency this.total}}</span>
    </div>
  </section>
  <button type="button" class="float-right btn btn-lg btn-success">Check out</button>
</main>